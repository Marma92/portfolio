<!-- views/template.ejs -->
<!doctype html>
<html>
<head>
	<title><%= obj.pageTitle %></title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
	<% include ./partials/menu %>
  <div class="container">
      <div class="page-header text-center">
				<img src="<%= obj.profilePic.link %>" id="profilePic"/>
        <h1><%= obj.sections.section.contentSection.titleSection %></h1>
			</div>
          <div class="row">
						<div class="col-sm-12 col-sm-offset-0" >
								<center><%- obj.sections.section.contentSection.textSection %></center>
								<% for (var i = 1; i <= obj.contactInfos.length; i++) { %>
								<div class="col-sm-3" id="contact-div">
									<span class ="<%= obj.contactInfos[i].contactInfoFAClass %>" aria-hidden="true"></span>
									<% if (obj.contactInfos[i].isAnEmail === 1){ %>
										<h4><a href="mailto:<%= obj.contactInfos[i].contactInfoValue %>"><%= obj.contactInfos[i].contactInfoName %></a></h4>
									<% }else{ %>
										<h4><a href="<%= obj.contactInfos[i].contactInfoValue %>"><%= obj.contactInfos[i].contactInfoName %></a></h4>
									<% } %>
								</div>
								<% } %>
						</div>
          </div>
  </div>

  <% include ./partials/footer %>
</body>
</html>
